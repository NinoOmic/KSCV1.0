@using WebApplication2.Models;
@{
    //Layout = null;

    ViewBag.Title = "Termin";
}
@model Kulturno_sportski_centar.Areas.ModulZaposlenik.Models.TerminEditViewModel



<h2>Dodavanje novog termina</h2>


<hr />
@using (Html.BeginForm("Spremi", "Termin"))
{
    @Html.HiddenFor(model=>model.Id)
    <div class="form-group">
        <h5 >Datum</h5>
        @Html.TextBoxFor(model => model.Datum, new {@class="form-control"})
        @Html.ValidationMessageFor(model=>model.Datum)
    </div>
@Html.ValidationSummary()
    <input type="submit" value="Spremi" class="btn btn-success" />
}

       
     
